<!DOCTYPE html>
<html>
  <head>
    <title>EComApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/navigation/navigation' %>
    <div class="container">
      <div id="fade-out-target" >
        <%= render 'layouts/messages/errors'%>
      </div>
      <div id="items-result">
        <%= yield %>
      </div>        
		</div>
  </body>
</html>
