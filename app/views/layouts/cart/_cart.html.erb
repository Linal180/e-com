<div class="cart_section">
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="cart_container">
                <div class="cart_title">Shopping Cart<small> ( <%= current_user.get_orders().count %> item<%= "s" if current_user.get_orders().count > 1 %> in your cart) </small></div>
                <div class="cart_items">
                    <ul class="cart_list">
                        <li class="cart_item">
                            <% if current_user.get_orders().count > 0 %>
                                <table class="table">
                                    <thead>
                                        <tr>
                                        <th class="cart_item_title" scope="col"></th>
                                        <th class="cart_item_title" scope="col">Name</th>
                                        <th class="cart_item_title" scope="col">Price</th>
                                        <th class="cart_item_title" scope="col">Quantity</th>
                                        <th class="cart_item_title" scope="col">Total</th>
                                        <th class="cart_item_title" scope="col"></th>
                            
                                        </tr>
                                    </thead>
                                    <% current_user.get_orders().each do |order| %>
                                    <tbody>
                                        <tr>
                                            
                                            <td class="cart_item_image"><%= image_tag get_item_picture(order.item_id) %></td>  
                                            <td class="cart_item_text"><%= get_item_name(order.item_id) %></td>
                                            <td class="cart_item_text"><%= get_item_price(order.item_id) %></td>
                                            <td class="cart_item_text">1</td>
                                            <td class="cart_item_text"><%= get_item_price(order.item_id) %></td>
                                            <td class="cart_item_text"><%= link_to '<i class="fa fa-window-close"></i>'.html_safe, remove_order_path(id: order.item_id), remote: true, class: '', method: :delete %></td>
                                        </tr>
                                    </tbody>
                                    <% end %>
                                </table>
                            <% end %>                            
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
</div>