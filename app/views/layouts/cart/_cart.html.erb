<div class="cart_section">
<div class="container">
    <div class="row">
        <div class="col-6">
            <div class="cart_container">
                <div class="cart_title">Shopping Cart<small> (1 item in your cart) </small></div>
                <div class="cart_items">
                    <ul class="cart_list">
                        <li class="cart_item">
                            <table class="table">
                                <thead>
                                    <tr>
                                    <th class="cart_item_title" scope="col"></th>
                                    <th class="cart_item_title" scope="col">Name</th>
                                    <th class="cart_item_title" scope="col">Price</th>
                                    <th class="cart_item_title" scope="col">Quantity</th>
                                    <th class="cart_item_title" scope="col">Total</th>
                        
                                    </tr>
                                </thead>
                                <% current_user.get_orders().each do |order| %>
                                <tbody>
                                    <tr>
                                        
                                        <td class="cart_item_image"><%= image_tag order.get_item_picture(order.item_id) %></td>  
                                        <td class="cart_item_text"><%= order.get_item_name(order.item_id) %></td>
                                        <td class="cart_item_text"><%= order.get_item_price(order.item_id) %></td>
                                        <td class="cart_item_text">1</td>
                                        <td class="cart_item_text"><%= order.get_item_price(order.item_id) %></td>
                                    </tr>
                                </tbody>
                                <% end %>
                            </table>                            
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
</div>